citHeader("To cite TSENAT in publications use:")

citEntry(
    entry = "Manual",
    title = "TSENAT: Tsallis Entropy Analysis Toolbox",
    author = personList(as.person("Cristobal Gallardo")),
    year = 2026,
    note = "R package version 0.99.0",
    url = "https://github.com/gallardoalba/TSENAT"
)

citHeader("Also cite the original SplicingFactory paper used as basis:")

citEntry(
    entry    = "Article",
    title    = "SplicingFactory - Splicing diversity analysis for transcriptome data",
    author   = personList(
        as.person("Benedek Danko"),
        as.person("Peter Szikora"),
        as.person("Tamas Por"),
        as.person("Alexa Szeifert"),
        as.person("Endre Sebestyen")
    ),
    journal  = "Bioinformatics",
    volume   = "38",
    number   = "2",
    pages    = "384-390",
    year     = 2022,
    doi      = "10.1093/bioinformatics/btab648",
    url      = "https://doi.org/10.1093/bioinformatics/btab648",
    textVersion = "Danko et al., SplicingFactory - Splicing diversity analysis for transcriptome data. Bioinformatics, 2022, 38, 384-390"
)